<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.activities.SearchActivity"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            tools:layout_editor_absoluteY="-75dp"
            tools:layout_editor_absoluteX="26dp">

        <android.support.v7.widget.CardView
                app:cardCornerRadius="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardView">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/back_iv"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"/>

                <EditText
                        android:id="@+id/search"
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:imeOptions="actionSearch"
                        android:layout_marginRight="20dp"
                        android:hint="What do you need?"
                        android:inputType="text"
                        android:layout_gravity="center"
                        android:textColor="#665E5E"/>

                <ImageView
                        android:visibility="gone"
                        android:id="@+id/refresh"
                        android:src="@drawable/ic_refresh_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="16dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_services"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>
        <TextView
                android:text="Available Services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/recycler" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>