<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <TextView
            android:text="Name"
            android:textColor="#0054A6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Address"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/address_tv"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintStart_toStartOf="@+id/name"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/ic_directions_black_24dp"
            android:id="@+id/direction_iv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            app:layout_constraintHorizontal_bias="0.859"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    <TextView
            android:text="GO"
            android:textColor="#0054A6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/direction_iv"
            app:layout_constraintStart_toStartOf="@+id/direction_iv"
            app:layout_constraintEnd_toEndOf="@+id/direction_iv"
            app:layout_constraintHorizontal_bias="0.612"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="9:00 AM - 3:00 PM"
            android:textColor="#13FC1C"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/address_tv"
            app:layout_constraintStart_toStartOf="@+id/address_tv"
            app:layout_constraintEnd_toEndOf="@+id/address_tv"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:srcCompat="@drawable/line_shape"
            android:id="@+id/imageView23"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="center"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/time"/>

</android.support.constraint.ConstraintLayout>