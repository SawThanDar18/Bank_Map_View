<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.BranchDetailsActivity">

    <android.support.v4.widget.NestedScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.activities.BranchDetailsActivity"
                android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.detail.BankDetailActivity"
                tools:layout_editor_absoluteY="-75dp"
                tools:layout_editor_absoluteX="26dp">

            <android.support.v7.widget.CardView
                    app:cardCornerRadius="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/cardView">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/back_press_iv"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"/>

                    <TextView
                            android:id="@+id/title"
                            android:layout_margin="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="THINGANGYUN(2)"
                            android:textSize="20sp"/>

                    <ImageView
                            android:id="@+id/refresh_iv"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_refresh_black_24dp"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                    android:text="Branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"/>
            <TextView
                    android:text="SIN HPYU KYUN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222020"
                    android:id="@+id/branch_title"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_place_black_24dp"
                    android:id="@+id/imageView7"
                    app:layout_constraintTop_toBottomOf="@+id/branch_title"
                    app:layout_constraintStart_toStartOf="@+id/branch_title"
                    android:layout_marginTop="20dp"/>
            <TextView
                    android:text="NO(65), LANMADAW ST, NO(2)QTR, PAREIK, KHAYAR QTR, SIN HPYU KYUN"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/atm_address"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/branch_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_access_time_black_24dp"
                    android:id="@+id/imageView8"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView7"/>
            <TextView
                    android:text="9:30 AM - 3:00 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/atm_address"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.013"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_phone_android_black_24dp"
                    android:id="@+id/imageView9"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView8"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="09951018555"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:id="@+id/branch_phone"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView9"
                    android:layout_marginStart="12dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="52dp"
                    android:background="@drawable/image_shape"
                    app:srcCompat="@drawable/ic_phone_android_blue_24dp"
                    android:id="@+id/call_image"
                    android:scaleType="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/branch_phone"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.402"/>
            <ImageView
                    android:layout_width="50dp"
                    android:background="@drawable/image_shape"
                    android:layout_height="52dp"
                    android:id="@+id/map_image"
                    app:srcCompat="@drawable/ic_directions_black_24dp"
                    android:scaleType="center"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/call_image"
                    app:layout_constraintTop_toTopOf="@+id/call_image"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/call_image"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.108"/>
            <TextView
                    android:text="CALL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0054A6"
                    android:textSize="15sp"
                    android:id="@+id/textView6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/call_image"
                    app:layout_constraintStart_toStartOf="@+id/call_image"
                    app:layout_constraintEnd_toEndOf="@+id/call_image"
                    app:layout_constraintHorizontal_bias="0.666"/>
            <TextView
                    android:text="GO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0054A6"
                    android:textSize="15sp"
                    android:id="@+id/textView7"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/map_image"
                    app:layout_constraintEnd_toEndOf="@+id/map_image"
                    app:layout_constraintStart_toStartOf="@+id/map_image"
                    app:layout_constraintHorizontal_bias="0.695"/>
            <TextView
                    android:text="Services available here"
                    android:textColor="#0E0D0D"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <android.support.v7.widget.RecyclerView
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/recyclerview"
                    android:layout_width="402dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintHorizontal_bias="0.0"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>