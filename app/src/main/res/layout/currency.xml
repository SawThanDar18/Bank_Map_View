                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/buy_usd_tv" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.512"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/buy_sgd_tv" app:layout_constraintEnd_toEndOf="@+id/buy_usd_tv"
                        app:layout_constraintStart_toStartOf="@+id/buy_usd_tv"
                        app:layout_constraintTop_toBottomOf="@+id/buy_usd_tv"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/buy_eur_tv" app:layout_constraintEnd_toEndOf="@+id/buy_sgd_tv"
                        app:layout_constraintStart_toStartOf="@+id/buy_sgd_tv"
                        app:layout_constraintTop_toBottomOf="@+id/buy_sgd_tv" android:layout_marginTop="8dp"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/buy_thb_tv" app:layout_constraintEnd_toEndOf="@+id/buy_eur_tv"
                        app:layout_constraintStart_toStartOf="@+id/buy_eur_tv" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/buy_eur_tv" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/layout_shape"
                    android:layout_width="120dp"
                    android:layout_height="159dp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                    android:id="@+id/constraintLayout4"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout2">

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/sell_usd_tv" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.512"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/sell_sgd_tv" app:layout_constraintEnd_toEndOf="@+id/sell_usd_tv"
                        app:layout_constraintStart_toStartOf="@+id/sell_usd_tv" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/sell_usd_tv"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/sell_eur_tv" app:layout_constraintEnd_toEndOf="@+id/sell_sgd_tv"
                        app:layout_constraintStart_toStartOf="@+id/sell_sgd_tv"
                        app:layout_constraintTop_toBottomOf="@+id/sell_sgd_tv" android:layout_marginTop="8dp"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/sell_thb_tv" app:layout_constraintEnd_toEndOf="@+id/sell_eur_tv"
                        app:layout_constraintStart_toStartOf="@+id/sell_eur_tv" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/sell_eur_tv" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/layout_shape"
                    android:layout_width="120dp"
                    android:layout_height="76dp"
                    android:id="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginTop="60dp">

                <TextView
                        android:text="Sell"
                        android:textSize="18sp"
                        android:textColor="#665E5E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView25" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/layout_shape"
                    android:layout_width="120dp"
                    android:layout_height="159dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                    app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
                    android:id="@+id/constraintLayout5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="16dp">

                <TextView
                        android:text="USD"
                        android:textSize="20sp"
                        android:textColor="#665E5E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView24" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:text="SGD"
                        android:textSize="20sp"
                        android:textColor="#665E5E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView27"
                        app:layout_constraintTop_toBottomOf="@+id/textView24" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/textView24"
                        app:layout_constraintEnd_toEndOf="@+id/textView24" app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:text="EUR"
                        android:textSize="20sp"
                        android:textColor="#665E5E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView28"
                        app:layout_constraintTop_toBottomOf="@+id/textView27" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/textView27"
                        app:layout_constraintEnd_toEndOf="@+id/textView27"/>
                <TextView
                        android:text="THB"
                        android:textSize="20sp"
                        android:textColor="#665E5E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView29" app:layout_constraintEnd_toEndOf="@+id/textView28"
                        app:layout_constraintStart_toStartOf="@+id/textView28"
                        app:layout_constraintTop_toBottomOf="@+id/textView28" android:layout_marginTop="8dp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/layout_shape"
                    android:layout_width="120dp"
                    android:layout_height="76dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout4" android:layout_marginStart="116dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintEnd_toStartOf="@+id/constraintLayout3" android:id="@+id/constraintLayout8"
                    app:layout_constraintHorizontal_bias="1.0">

                <TextView
                        android:text="Buy"
                        android:textSize="18sp"
                        android:textColor="#665E5E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView26" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/kbz_logo"
                    android:id="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.494"
                    tools:ignore="MissingConstraints" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/service_recycler"/>
            <TextView
                    android:text="Version 2.1.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#C09C9C"
                    android:textSize="15sp"
                    android:id="@+id/title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    android:layout_marginBottom="16dp"/>

        </android.support.constraint.ConstraintLayout>
