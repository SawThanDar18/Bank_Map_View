                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.942"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.0" android:layout_marginTop="16dp"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraint2"
                    android:background="@drawable/card_view_shape"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" android:layout_marginTop="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_search_black_24dp"
                        android:id="@+id/back_iv"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView13"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="68dp"
                        app:layout_constraintVertical_bias="0.166"/>

                <TextView
                        android:text="Find your nearest exchange"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:id="@+id/textView13"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/back_iv"
                        android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/constraint2"
                    android:id="@+id/service_recycler"
                    app:layout_constraintTop_toBottomOf="@+id/constraint2"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="@+id/constraint2" android:layout_marginStart="16dp"/>

            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/layout_shape"
                    android:layout_width="120dp"
                    android:layout_height="159dp"
                    android:id="@+id/constraintLayout2"
                    app:layout_constraintEnd_toStartOf="@+id/constraintLayout4"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="@+id/constraintLayout4"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4"
                    app:layout_constraintVertical_bias="0.0">

